first_100 = tibble(RPS = apply(HDA2[c(1:100), c(255:290)], 2, EnvStats::geoMean),
                   Minute = as.integer(rep(c(0, 15, 30, 45, 60, 75), 6)),
                   Model = factor(c(rep("0", 6), 
                                    rep("3", 6),
                                    rep("3 (2019)", 6),
                                    rep("3 (2015-2019)", 6),
                                    rep("3 (2015-2019) free gamma" , 6),
                                    rep("5 (2015-2019)", 6)),
                                  levels = c("0", 
                                             "3", 
                                             "3 (2019)",
                                             "3 (2015-2019)",
                                             "3 (2015-2019) free gamma",
                                             "5 (2015-2019)"))) 
first_100 %>%
  ggplot(aes(x = Minute, y = RPS, col = Model)) +
  geom_line() +
  geom_point() +
  scale_x_continuous(breaks = c(0, 15, 30, 45, 60, 75)) +
  theme_bw() +
  ggtitle("First 100 matches") +
  ylab("Geometric mean")

