```{r}
matches = reds %>%
  filter(Season == 2020, Half == 1) %>%
  .$Match
length(matches)
```

```{r}
HDA2_reds = HDA2 %>%
  filter(Match %in% matches)

all_reds = tibble(RPS = apply(HDA2_reds[,c(255:290)], 2, EnvStats::geoMean),
                  Minute = as.integer(rep(c(0, 15, 30, 45, 60, 75), 6)),
                  Model = factor(c(rep("0", 6), 
                                   rep("3", 6),
                                   rep("3 (2019)", 6),
                                   rep("3 (2015-2019)", 6),
                                   rep("3 (2015-2019) free gamma" , 6),
                                   rep("5 (2015-2019)", 6)),
                                 levels = c("0", 
                                            "3", 
                                            "3 (2019)",
                                            "3 (2015-2019)",
                                            "3 (2015-2019) free gamma",
                                            "5 (2015-2019)"))) 
all_reds %>%
  ggplot(aes(x = Minute, y = RPS, col = Model)) +
  geom_line() +
  geom_point() +
  scale_x_continuous(breaks = c(0, 15, 30, 45, 60, 75)) +
  theme_bw() +
  ggtitle("All matches with red cards in the first half") +
  ylab("Geometric mean")

all_reds %>%
  pivot_wider(id_cols = "Model", values_from = "RPS", names_from = "Minute",
              names_prefix = "Minute ") %>%
  kable()
```

